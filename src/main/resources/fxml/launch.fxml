    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/bg1.png" />
            </image>
        </ImageView>
        <AnchorPane layoutX="369.0" layoutY="50.0" prefHeight="300.0" prefWidth="210.0" style="-fx-background-color: #13313F;">
            <children>
                <Label layoutX="37.0" layoutY="27.0" prefHeight="23.0" prefWidth="137.0" text="Sign In / Up" textFill="WHITE">
                    <font>
                        <Font name="Courier New Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="txtUsername" layoutX="31.0" layoutY="73.0" promptText="username" style="-fx-background-color: #344D59;" />
                <PasswordField fx:id="txtPassword" layoutX="31.0" layoutY="118.0" prefHeight="25.0" prefWidth="149.0" promptText="password" style="-fx-background-color: #344D59;" />
